<h1>new.html</h1>
<h3>新規投稿</h3>
<%= form_for @trip do |f| %>
    <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
        <div class="field">
            <%= f.label :image %>
            <%= f.file_field :image %>
        </div>
        <div class="field">
            
            <br><%= f.label :departure %></br>
            <%= f.text_field :departure, :size => 140 %>

            <br><%= f.label :destination %></br>
            <%= f.text_field :destination, :size => 140 %>

            <br> <%= f.label :transportation %></br>
            <%= f.text_field :transportation, :size => 140 %>

            <br><%= f.label :thought %></br>
            <%= f.text_field :thought, :size => 140 %>  

            <br><%= f.label :date %></br>
            <%= f.text_field :date, :size => 140 %>

            <br><%= f.label :whoslive %></br>
            <%= f.text_field :whoslive, :size => 140 %>
        </div>

    

    <%= f.submit "投稿する" %>
<% end %>
<%= link_to "投稿一覧に戻る", trips_path %>